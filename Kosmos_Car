  <script>
    let user = JSON.parse(localStorage.getItem('kosmos_user')) || null;

    function register() {
      const phone = document.getElementById('phone').value;
      if(!phone) return alert('–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞');
      user = { phone, subscription:null };
      localStorage.setItem('kosmos_user', JSON.stringify(user));
      document.getElementById('register').style.display='none';
      document.getElementById('plans').style.display='block';
    }

    function buy(name,price,washes,days){
      const expiry = new Date(Date.now() + days*24*60*60*1000).toLocaleDateString();
      user.subscription = {name,price,washes,remaining:washes,expiry};
      localStorage.setItem('kosmos_user', JSON.stringify(user));
      showSubscription();
    }

    function showSubscription(){
      document.getElementById('plans').style.display='none';
      document.getElementById('subscription').style.display='block';
      document.getElementById('subName').innerText = user.subscription.name;
      document.getElementById('subRemaining').innerText = user.subscription.remaining;
      document.getElementById('subExpiry').innerText = user.subscription.expiry;
    }

    function useWash(){
      if(user.subscription.remaining<=0) return alert('–ú–æ–π–∫–∏ –∑–∞–∫–æ–Ω—á–∏–ª–∏—Å—å');
      user.subscription.remaining -=1;
      localStorage.setItem('kosmos_user', JSON.stringify(user));
      document.getElementById('subRemaining').innerText = user.subscription.remaining;
    }

    if(user){
      if(user.subscription) showSubscription();
      else{
        document.getElementById('register').style.display='none';
        document.getElementById('plans').style.display='block';
      }
    }
  </script>
